<p id="notice"><%= notice %></p>
<style>
  table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
  }
  th, td {
      padding: 5px;
  }
</style>
<h3> ScoreBoard</h3>
<hr>
<table>
<tr>
<% @game.frames.each_with_index do |frame, index|%>
<div>
<td>
Frame <%=index.succ%> |
  <table>
  <tr>
<% if frame.is_strike? %>
  <td><strong><%= 'X' %> </strong></td>
<% else %>
  <td><strong><%= frame.first_roll %> </strong></td>
<% end %>
<% if frame.is_spare? %>
<td> <strong><%= '/'%> </strong> </td>
<% else %>
  <td><strong><%= frame.second_roll %> </strong></td>
<% end %>
</tr>
</table>
Score: <strong><%= frame.score %></strong>
</td>
<div>
<% end %>
</tr>
</table>
<hr>
<br/> <br/> <br/>
<% if @game.finished?%>
  Congratulations! You completed the game with final score <%= @game.final_score? %>
<%else%>
  <%= render 'score' %>
<%end%>
<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
